# AI Crypto Trader .env
# Keep secure, no commit.

# ===================== AI API KEYS =====================
LLM_API_KEY=your_llm_api_key_here   # AI API key
LLM_PROVIDER=xai  # deepseek, groq, openai, xai
LLM_MODEL=default  # 'default' or specific model for example grok-4
LLM_TEMPERATURE=0.3  # 0.0-1.0 creativity (low for consistent)
LLM_MAX_TOKENS=2000  # Max response tokens
# ===================== EXCHANGE API KEYS =====================
EXCHANGE_API_KEY=your_api_key_here # exchange key
EXCHANGE_API_SECRET=your_api_secret_here  # exchange secret
EXCHANGE=BITUNIX # exchange
TAKER_FEE=0.0006 # Futures taker fee %

# ===================== TRADING =====================
SYMBOL=BTCUSDT  # Trading pair
CRYPTO=BTC  # Base crypto
CURRENCY=USDT  # Quote currency
CYCLE_MINUTES=1  # Cycle interval minutes
LEVERAGE=20  # Futures leverage 1-125
MARGIN_MODE=ISOLATED  # ISOLATED or CROSS

# ===================== RISK MANAGEMENT =====================
MIN_CONFIDENCE=0.75  # AI conf threshold 0-1
VOLATILITY_ADJUSTED=true  # Adjust position size based on volatility
ATR_PERIOD=14  # ATR period for volatility calculation

# ===================== AI PROMPT CONFIG =====================
MAX_RISK_PERCENT=1.0  # Max risk per trade % of equity
MIN_RISK_REWARD_RATIO=2.0  # Minimum risk-reward ratio for trades
CONFIDENCE_THRESHOLD=0.7  # Minimum confidence to execute trades
WEEKLY_GROWTH_TARGET=5.0  # Target weekly growth %
RSI_PERIOD=14  # RSI indicator period
EMA_PERIOD=20  # EMA indicator period
BB_PERIOD=20  # Bollinger Bands period
LONG_TF_MULTIPLIER=4  # Long timeframe multiplier (short_tf * this)
OHLCV_LIMIT=7  # Number of candles to show in prompt

# ===================== TESTING =====================
FORWARD_TESTING=true  # false=live, true=paper
